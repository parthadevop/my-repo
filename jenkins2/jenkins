pipeline {
    agent any

    stages {
        stage('Call Variables') {
            steps {
                build job: 'other-job', propagate: false
                script {
                    def otherJob = Jenkins.instance.getItemByFullName('other-job')
                    def otherBuild = otherJob.getLastBuild()
                    def otherEnvVars = otherBuild.getEnvironment()
                    echo "Variable from other job: ${otherEnvVars['VAR_NAME']}"
                }
            }
        }
    }
}
